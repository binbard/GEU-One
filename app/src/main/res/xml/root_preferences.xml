<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Personal">

        <EditTextPreference
            app:key="signature"
            app:title="Your Signature"
            app:defaultValue="Anonymous"
            app:dialogTitle="Signature"
            app:summary="Used as your identity"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="campus"
            app:enabled="false"
            app:title="Your Campus"
            app:summary="N/A" />

    </PreferenceCategory>

    <PreferenceCategory app:title="App">

        <SwitchPreferenceCompat
            app:key="sync"
            app:defaultValue="true"
            app:title="Receive Push Notifications" />

        <Preference
            app:key="clear_files"
            app:title="Clear Files"
            app:summary="Delete all downloaded files" />

    </PreferenceCategory>

    <PreferenceCategory app:title="About">

        <Preference
            app:key="version"
            app:enabled="false"
            app:title="@string/app_name"
            app:summary="N/A" />

        <Preference
            app:title="Privacy Policy" />

        <Preference
            app:title="Terms &amp; Conditions" />

        <Preference
            app:title="Contributors" />

    </PreferenceCategory>

</PreferenceScreen>