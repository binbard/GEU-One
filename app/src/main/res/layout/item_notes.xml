<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_notes_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#33d1d0cd"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="135dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="9dp">

        <ImageView
            android:id="@+id/imgNoteItem"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_pdf_file_2" />

        <TextView
            android:id="@+id/tvNoteItem"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:maxHeight="35dp"
            android:text="Organic Reactions and Synthesis of Drug Molecules"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgNoteItem" />

        <ImageView
            android:id="@+id/imgNoteDownload"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="1dp"
            android:alpha="0.6"
            app:layout_constraintEnd_toEndOf="@+id/imgNoteItem"
            app:layout_constraintTop_toTopOf="@+id/imgNoteItem"
            app:srcCompat="@drawable/ic_download_square" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>