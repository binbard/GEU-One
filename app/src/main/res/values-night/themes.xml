<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.GEUOne" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyLinearTheme">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.GEUOne.AppBarOverlay">
        <item name="android:tint">@color/material_dynamic_primary90</item>
        <item name="colorPrimary">@color/material_dynamic_primary50</item>
        <item name="contentScrim">@color/material_dynamic_primary30</item>
    </style>

    <style name="Theme.GEUOne.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"></style>

    <style name="MyCard" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

</resources>